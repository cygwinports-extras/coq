DESCRIPTION="Formal Proof Management System"
HOMEPAGE="http://coq.inria.fr/"
SRC_URI="http://coq.inria.fr/distrib/V${PV}/files/${P}.tar.gz"
PATCH_URI="8.3-cygwin.patch
           8.3-gnu-make-383.patch"

src_compile() {
	lndirs
	cd ${B}
	OS=Cygwin \
	./configure \
		-prefix /usr -mandir /usr/share/man \
		-arch $(/bin/arch) \
		-browser "xdg-open %s"
	cygmake EXE=.exe
}

src_install() {
	cd ${B}
	cygmake install COQINSTALLPREFIX=${D} EXE=.exe
}
